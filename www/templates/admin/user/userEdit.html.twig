{% extends 'admin/index.html.twig' %}

{% block contenu %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12" style="height: 90vh;">
            <div id="form-container" class="x_panel tile overflow_hidden" style="min-height: 320px">
                <h1>Modifier un utilisateur</h1>
                <p>Modifie un utilisateur existant du site web.</p>

                {{ form_start(form, {'attr': { 'class': 'form-horizontal form-label-left'}}) }}
                <div class="form-group">
                    {{ form_label(form.username, 'Nom d\'utilisateur', { 'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'} }) }}
                    {{ form_errors(form.username) }}
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.username, { 'attr': {'class' : 'form-control col-md-8 col-xs-12'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.email, 'Email', { 'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'} }) }}
                    {{ form_errors(form.email) }}
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.email, { 'attr': {'class' : 'form-control col-md-8 col-xs-12'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.password, 'Mot de passe', { 'label_attr': {'class': 'control-label col-md-2 col-sm-2 col-xs-12'} }) }}
                    {{ form_errors(form.password) }}
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_widget(form.password, { 'attr': {'class' : 'form-control col-md-8 col-xs-12'} }) }}
                    </div>
                </div>
                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-success'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}